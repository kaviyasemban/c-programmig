#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main(){ 
    int num1,num2,num3,num4,num5,a;
    float b;
    scanf("%d %d %d %d %d",&num1,&num2,&num3,&num4,&num5);
    a=num1+num2+num3+num4+num5;
    printf("Sum of the 5 number is : %d\n",a);
    b=a/5.0;
    printf("Average of the 5 number is : %.1f ",b);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
